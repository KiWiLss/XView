<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_scrollview_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="顶部标题显示隐藏"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_scrollview_stick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吸顶两个view"/>
            <Button
                android:id="@+id/btn_scrollview_stick2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吸顶view"/>
            <Button
                android:id="@+id/btn_scrollview_stick3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吸顶md"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_scrollview_stick4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吸顶多个悬浮"
            />
        <Button
            android:id="@+id/btn_scrollview_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下拉放大图片"
            />
        <Button
            android:id="@+id/btn_scrollview_zoom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下拉放大图片2"
            />

    </LinearLayout>


</ScrollView>