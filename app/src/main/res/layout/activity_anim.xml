<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_anim_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="帧动画"/>
        <Button
            android:id="@+id/btn_anim_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View动画"/>
        <Button
            android:id="@+id/btn_anim_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity 转场动画"/>
        <Button
            android:id="@+id/btn_anim_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="属性动画"/>
        <Button
            android:id="@+id/btn_anim_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="布局动画"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>