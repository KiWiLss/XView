<?xml version="1.0" encoding="utf-8"?>
<com.kiwilss.xview.ui.view.scrollview.widget.zoom.HeadZoomScrollView
    android:id="@+id/sv_zoom_scroll2_outer"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_zoom_scroll2_icon"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/wuhuang"
            android:scaleType="centerCrop"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/yellow_FF9B52"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/green_07C0C2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/red_F7E6ED"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/black_999999"/>


    </LinearLayout>
</com.kiwilss.xview.ui.view.scrollview.widget.zoom.HeadZoomScrollView>