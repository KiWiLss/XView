<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
     <Button
         android:id="@+id/btn_recycler_itemFixed"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="固定 item 高度,设置显示固定 item 数目"
         android:textAllCaps="false"/>
        <Button
            android:id="@+id/btn_recycler_itemWrap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="非固定 item 高度,设置显示固定 item 数目"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/btn_recycler_itemWrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="横向滑动设置显示固定 item 数目"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_recycler_decoration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置分割线,线性布局"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_recycler_decorationGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置分割线,网格布局"
            android:textAllCaps="false"/>


        <Button
            android:id="@+id/btn_recycler_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置分割线作为Item的上下左右间隔"
            android:textAllCaps="false"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>