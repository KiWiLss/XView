<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统自带的基本的转场动画"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_anim_cutin_no"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="无动画"/>
            <Button
                android:id="@+id/btn_anim_cutin_default"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="默认动画"/>
            <Button
                android:id="@+id/btn_anim_cutin_alpha"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="淡入淡出"/>
            <Button
                android:id="@+id/btn_anim_cutin_translate"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="左右交错"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义简单转场动画"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_anim_cutin_alpha2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="淡入淡出"/>
            <Button
                android:id="@+id/btn_anim_cutin_left"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="左进右出"/>
            <Button
                android:id="@+id/btn_anim_cutin_right"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="右进左出"/>
            <Button
                android:id="@+id/btn_anim_cutin_leftRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进入右进左出,退出左进右出"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_anim_cutin_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上进下出"/>
            <Button
                android:id="@+id/btn_anim_cutin_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下进上出"/>
            <Button
                android:id="@+id/btn_anim_cutin_topbottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进入上进下出,退出下进上出"/>
        </LinearLayout>

    </LinearLayout>




</androidx.core.widget.NestedScrollView>