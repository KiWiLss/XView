<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_transition_demolist_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m250"
        android:src="@mipmap/wuhuang"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m60"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_item_transition_demolist_header"
            android:layout_width="@dimen/m30"
            android:layout_height="@dimen/m30"
            android:src="@mipmap/default_head_icon"/>

        <TextView
            android:id="@+id/tv_item_transition_demolist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随意一个姓名"
            android:textSize="@dimen/m14"
            android:textColor="@color/black_333333"
            android:layout_marginStart="@dimen/m15"
            />


    </LinearLayout>




</LinearLayout>