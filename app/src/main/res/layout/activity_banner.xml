<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认图片 + 圆形指示器" />

        <com.youth.banner.Banner
            android:id="@+id/banner_circle"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            app:banner_indicator_normal_color="@color/white"
            app:banner_indicator_radius="6dp"
            app:banner_indicator_selected_color="@color/green_07C0C2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认图片 + 标题 + 圆形指示器" />

        <com.youth.banner.Banner
            android:id="@+id/banner_circle_title"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            app:banner_indicator_normal_color="@color/white"
            app:banner_indicator_radius="6dp"
            app:banner_indicator_selected_color="@color/green_07C0C2" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>