<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_toolbar_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_FF9B52"
            app:title="主标题"
            app:titleTextColor="@color/white"
            app:subtitle="副标题"
            app:subtitleTextColor="@color/white"
            app:navigationIcon="@mipmap/ic_navigation_back_white"
            app:menu="@menu/toolbar"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义设置各种"/>
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/red_F7E6ED">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_navigation_back_white"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可以自定义各种样式"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>